<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:backgroundTint="#151c22"
    android:foreground="@drawable/card_view"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        tools:layout_editor_absoluteX="0dp"
        android:background="#151c22"
        tools:layout_editor_absoluteY="81dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/logoP"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:layout_alignTop="@+id/logo"
            android:layout_toEndOf="@+id/logo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-3dp"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/errIco"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_alignTop="@+id/logo"
            android:layout_toStartOf="@+id/itemName"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="-1dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/logo"
            android:layout_marginTop="-8dp"
            android:layout_toEndOf="@+id/logo"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text=""
            android:textColor="#dcdcdc"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemInfo"
            android:layout_width="275dp"
            android:layout_height="20dp"
            android:layout_below="@+id/itemName"
            android:layout_toEndOf="@+id/logo"
            android:gravity="start"
            android:text=""
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#dcdcdc"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/itemInfo2"
            android:layout_width="275dp"
            android:layout_height="88dp"
            android:layout_below="@+id/itemInfo"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/logo"
            android:gravity="start"
            android:text=""
            android:textColor="#dcdcdc"
            android:textSize="14sp" />




        <TextView
            android:id="@+id/itemTag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:visibility="invisible"
            android:textSize="0sp"
            />

        <TextView
            android:id="@+id/itemUrl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:visibility="invisible"
            android:textSize="0sp"/>

        <TextView
            android:id="@+id/itemAuth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:visibility="invisible"
            android:textSize="0sp"/>

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            card_view:srcCompat="@drawable/outline_settings_24"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/moveItem"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            card_view:srcCompat="@android:drawable/stat_sys_upload_done"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>